<Page x:Class="GamesCollection.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GamesCollection.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите логин:" FontSize="20" Margin="5"></TextBlock>
            <TextBox FontSize="20" Width="300" Margin="5" Name="txbLogin"></TextBox>
            <TextBlock Text="Введите пароль:" FontSize="20" Margin="5"></TextBlock>
            <PasswordBox FontSize="20" Width="300" Margin="5" Name="psbPassword"></PasswordBox>
            <Button Name="btnLogin" Content="Войти" Height="50" Width="200" FontSize="20" Background="LightGreen" Margin="5" Click="btnLogin_Click"></Button>
            <Button Name="btnRegistration" Content="Регистрация" Height="50" Width="200" FontSize="20" Background="Yellow" Margin="5" Click="btnRegistration_Click"></Button>
            <Button Name="btnGuest" Content="Войти как Гость" Height="50" Width="200" FontSize="20" Background="LightYellow" Margin="5" Click="btnGuest_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
